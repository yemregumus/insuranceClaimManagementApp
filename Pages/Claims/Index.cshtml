@page
@model InsuranceClaimManagement.Pages.Claims.IndexModel
@{
    ViewData["Title"] = "Claims List";
}

<h1>Claims List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Claim ID</th>
            <th>Policy Number</th>
            <th>Claim Date</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model.Claims)
        {
        <tr>
            <td>@claim.Id</td>
            <td>@claim.PolicyNumber</td>
            <td>@claim.ClaimDate</td>
            <td>@claim.Status</td>


        </tr>
        }
    </tbody>
</table>

<a asp-page="/Claims/Create" class="btn btn-primary">Add New Claim</a>
