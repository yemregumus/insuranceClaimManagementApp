@page
@model InsuranceClaimManagement.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Users List";
}

<h1>Users List</h1>

<table class="table">
    <thead>
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.Name</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@user.Id" class="btn btn-warning">Edit</a>
                    <a asp-page="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Users/Create" class="btn btn-primary">Add New User</a>
